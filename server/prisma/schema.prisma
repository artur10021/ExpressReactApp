// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id            Int        @id @default(autoincrement())
  email         String     @unique
  fullName      String?  
  department    Department @relation(fields: [departmentsId], references: [id])
  departmentsId Int
  jobTitle      String
  isHead        Boolean    @default(false)
}

model Department{
  id              Int             @id @default(autoincrement())
  name            String          @unique 
  employeesCount  Int
  dateOfCreation  DateTime?       @default(now())
  description     String?
  employees       Employee[]
}